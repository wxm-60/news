<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Google Fonts -->
    <!-- Swap out "Roboto" for the font(s) you want to use -->
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css" crossorigin="anonymous">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    
    <!-- Your own CSS -->
    <link rel="stylesheet" href="/styles.css">

    <title>News</title>
  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="#">Daily News</a>
        <div class="navbar-nav ml-auto">
         <a class="btn btn-outline-info" href="https://wxm.netlify.app/contact.html">Subscribe</a>
        </div>
    </div>
    </nav>

    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h2 class="display-6"> Today is <span id="datetime"></span> </h2>
            <script> var dt = new Date(); document.getElementById("datetime").innerHTML = dt.toLocaleDateString(); </script>
            <p class="lead"> Current weather at Kellogg Global Hub is <%= @current_weather %> </p>
            <p> Tomorrow: <%= @extended_forecast[0][1] %> </p>
            <p> Next five days: </p>
      <ul>
      <% @extended_forecast.slice(1, 5).each do |weather| %>
        <li> <%= weather[0] %>D after tomorrow: <%= weather[1] %> </li>
      <% end %>
      </ul>
        </div>
    </div>

    <div class="container mt-5"> 
    <h1 class="text-center"> Today's Headlines </h1>
    <% @topnews.each do |news| %>
        <ul>
        <div class="card">
        <div class="card-body">
        <p class="title"> <%= news[0] %>  </p>       
        <p class="card-text"> <%= news[2] %> </p>
        <a href=<%= news[1] %>> Read here </a> 
        </div>
        </div>
        </ul>  
     <% end %> 
    </div>

    <hr class="my-4">
    <div class="container footer">
      <div class="row my-5">
          <p>powered by openweathermap.org and newsapi.org</p>
      </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>